{
  "name": "my-ts-app",
  "private": true,
  "scripts": {
    "start": "node -r ./boot-paths.js dist/index.js",
    "dev": "ts-node-dev --watch=src/**/*.ts --inspect=0.0.0.0:9229 --exit-child --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "test": "mocha",
    "test:watch": "npm run test -- --watch",
    "pretest:cov": "rimraf coverage .nyc_output",
    "test:cov": "nyc npm run test",
    "prelint": "ls-lint",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig-build.json",
    "build:watch": "npm run build -- --watch",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.11.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/chai-datetime": "0.0.37",
    "@types/faker": "^5.5.9",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-datetime": "^1.8.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "^7.0.4",
    "mocha": "^9.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.6.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "~4.5.5"
  },
  "dependencies": {
    "tsconfig-paths": "^3.13.0"
  }
}
